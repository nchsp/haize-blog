---
layout: base.njk
css: |
    <style>
        /* Back link */
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--text-mid);
            text-decoration: none;
            font-size: 0.9rem;
            margin-bottom: 40px;
            transition: color 0.2s ease, gap 0.2s ease;
        }

        .back-link:hover {
            color: var(--lagoon-deep);
            gap: 12px;
        }

        /* Article Header */
        .article-header {
            margin-bottom: 40px;
        }

        .article-meta {
            font-size: 0.85rem;
            color: var(--text-mid);
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .article-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.8rem;
            font-weight: 400;
            color: var(--near-black);
            line-height: 1.2;
            letter-spacing: -0.5px;
            margin-bottom: 30px;
        }

        .featured-image {
            width: 100%;
            height: auto;
            max-height: 450px;
            object-fit: cover;
            margin-bottom: 50px;
        }

        /* Article Body */
        .article-body {
            font-size: 1.05rem;
            line-height: 1.8;
            color: var(--text-dark);
        }

        .article-body p {
            margin-bottom: 1.5em;
        }

        .article-body h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.8rem;
            font-weight: 500;
            color: var(--near-black);
            margin-top: 2.5em;
            margin-bottom: 0.8em;
        }

        .article-body h3 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.4rem;
            font-weight: 500;
            color: var(--near-black);
            margin-top: 2em;
            margin-bottom: 0.6em;
        }

        .article-body img {
            max-width: 100%;
            height: auto;
            margin: 2em 0;
        }

        .article-body blockquote {
            border-left: 3px solid var(--gold-subtle);
            padding-left: 24px;
            margin: 2em 0;
            font-style: italic;
            color: var(--text-mid);
        }

        .article-body a {
            color: var(--lagoon-deep);
            text-decoration: underline;
            text-underline-offset: 2px;
        }

        .article-body a:hover {
            color: var(--lagoon-mid);
        }

        .article-body ul, .article-body ol {
            margin: 1.5em 0;
            padding-left: 1.5em;
        }

        .article-body li {
            margin-bottom: 0.5em;
        }

        /* Article Footer */
        .article-footer {
            margin-top: 60px;
            padding-top: 40px;
            border-top: 1px solid var(--gray-light);
        }

        .article-footer .back-link {
            margin-bottom: 0;
        }

        @media (max-width: 900px) {
            .article-title {
                font-size: 2rem;
            }

            .article-body {
                font-size: 1rem;
            }
        }
    </style>
---

<a href="/" class="back-link">← Back to Journal</a>

<article>
    <header class="article-header">
        <div class="article-meta">
            {% if show_date !== false %}
                <span class="post-date">{{ date | formatDate }}</span>
                <span>·</span>
            {% endif %}
            <span class="read-time">{{ content | readingTime }}</span>
        </div>
        <h1 class="article-title">{{ title }}</h1>
    </header>

    {% if featured_image %}
        <img src="{{ featured_image }}" alt="{{ title }}" class="featured-image">
    {% endif %}

    <div class="article-body">
        {{ content | safe }}
    </div>

    <footer class="article-footer">
        <a href="/" class="back-link">← Back to Journal</a>
    </footer>
</article>
